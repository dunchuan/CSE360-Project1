public class RecTest extends Applet implements ActionListener{
    Panel3 panel3;
    Panel4 simplified_circuit;
    Panel5 panel5;
    Panel6 panel6;
    Panel7 panel7;
    Panel8 panel8;
    //Panel5 panel5;
    public void init(){
        setSize(400,300);
        panel3=new Panel3();
        simplified_circuit =new Panel4();
        panel5 = new Panel5();
        panel6=new Panel6();
        panel7=new Panel7();
        panel8=new Panel8();
        
        
        add(new JLabel("Here is a question of K-map (XXXXXX), input 2 numbers as Row and Column sequencely to create a table.",JLabel.CENTER));
        add(panel3);
        add(simplified_circuit);
        add(panel5);
        
        add(simplified_circuit);
        add(panel6);
        add(panel7);
        add(panel8);

        panel3.setLayout(new BoxLayout(panel3, BoxLayout.PAGE_AXIS));
        
        simplified_circuit.setLayout(new BoxLayout(simplified_circuit, BoxLayout.PAGE_AXIS));

        panel5.setLayout(new BoxLayout(panel5, BoxLayout.PAGE_AXIS));

        panel6.setLayout(new BoxLayout(panel6, BoxLayout.PAGE_AXIS));

        panel7.setLayout(new BoxLayout(panel7, BoxLayout.PAGE_AXIS));
        
        panel8.setLayout(new BoxLayout(panel8, BoxLayout.PAGE_AXIS));
        
        (panel3.b).addActionListener(this); 
        
        add(simplified_circuit);

    }
    public void actionPerformed(ActionEvent e){
        if(e.getSource()== (panel3.b)){
            String r=(panel3.textRow.getText());
            String c=(panel3.textCol.getText()); 
        }
    }
}

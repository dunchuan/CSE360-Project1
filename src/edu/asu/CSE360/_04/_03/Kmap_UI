import java.applet.*;import javax.swing.*; 
import java.awt.*;import java.awt.event.*;

class Panel3 extends JPanel{
	//components declaration
	JTextField textRow,textCol;
    JButton b;
	Panel3(){
		 textRow = new JTextField(2);
		 textCol = new JTextField(2);
		 
		 textRow.setEditable(true);
	     add(new JLabel("Row: ",JLabel.LEFT));add(textRow);
	  
	     textCol.setEditable(true);
	     add(new JLabel("Column: ",JLabel.LEFT));add(textCol);
	     
	     b = new JButton("Create");   
	     add(b);
	}
}

class Panel4 extends JPanel{
	JLabel textA;
	JTextField sc;
	Panel4(){
		textA = new JLabel("Simplified circuit: ");
		add(textA);
		sc = new JTextField(10);
		add(sc);
		
	}
}

class Panel5 extends JPanel{
